<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blueButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newColor"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context="edu.cs.niu.z1829024.colorfragments.ListFragment"
    tools:ignore="DuplicateIds">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/blueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blue_string" />

    <Button
        android:id="@+id/goldButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/gold_string" />

    <Button
        android:id="@+id/plumButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/plum_string" />
</LinearLayout>
